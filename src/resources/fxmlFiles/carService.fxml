<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CarServiceController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Strona główna" />
            <MenuItem mnemonicParsing="false" text="Tankowania" />
            <MenuItem mnemonicParsing="false" text="Naprawy" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Mój garaż" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Dodaj tankowanie" />
            <MenuItem mnemonicParsing="false" text="Dodaj naprawę" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Wyczyść" />
            <MenuItem mnemonicParsing="false" text="Zapisz" />
            <MenuItem mnemonicParsing="false" text="Anuluj" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <ToggleButton mnemonicParsing="false" prefHeight="47.0" prefWidth="112.0" text="Strona główna">
               <toggleGroup>
                  <ToggleGroup fx:id="menu" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton layoutX="112.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="112.0" text="Tankowania" toggleGroup="$menu" />
            <ToggleButton layoutX="224.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="112.0" text="Naprawy" toggleGroup="$menu" />
            <Button fx:id="buttonAddRefueling" layoutX="24.0" layoutY="153.0" mnemonicParsing="false" onAction="#addRefueling" text="Dodaj tankowanie" />
      </children>
    </AnchorPane>
  </children>
</VBox>
