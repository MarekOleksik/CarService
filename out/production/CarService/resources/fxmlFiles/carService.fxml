<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CarServiceController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Strona główna" />
            <MenuItem mnemonicParsing="false" text="Tankowania" />
            <MenuItem mnemonicParsing="false" text="Naprawy" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Mój garaż" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Dodaj tankowanie" />
            <MenuItem mnemonicParsing="false" text="Dodaj naprawę" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Wyczyść" />
            <MenuItem mnemonicParsing="false" text="Zapisz" />
            <MenuItem mnemonicParsing="false" text="Anuluj" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="200.0">
         <top>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
           <fx:include fx:id="topMenuButtons" source="topMenuButtons.fxml" />
         </top>
         <left>
            <Button fx:id="buttonAddRefueling" mnemonicParsing="false" onAction="#addRefueling" text="Dodaj tankowanie" BorderPane.alignment="CENTER" />
         </left>
      </BorderPane>
  </children>
</VBox>
